###############################################################################
# Terraform and Providers
###############################################################################
terraform {
  required_providers {
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.22"
    }
    helm = {
      source  = "hashicorp/helm"
      version = "~> 2.10"
    }
  }
  required_version = ">= 1.3.0"
}

provider "kubernetes" {
  # Use your local Docker Desktop K8s context
  config_context = "docker-desktop"
  config_path    = "/home/javier/.kube/config"
}

provider "helm" {
  kubernetes {
    config_context = "docker-desktop"
    config_path    = "/home/javier/.kube/config"
  }
}